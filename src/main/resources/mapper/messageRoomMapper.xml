<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.candm.mapper.MessageRoomMapper">

    <!-- 방 생성 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into tbl_message_room (created_member_id, invited_member_id)
        values (#{senderId}, #{receiverId})
    </insert>

    <!-- 방 조회 -->
    <select id="selectByCreatedMemberIdAndInvitedMemberId">
        select id from tbl_message_room
        where created_member_id = #{senderId} and invited_member_id = #{receiverId}
    </select>


</mapper>
